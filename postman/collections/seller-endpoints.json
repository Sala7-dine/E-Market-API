{
  "name": "Seller Management",
  "item": [
    {
      "name": "Get Seller Products",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
              "pm.test(\"Response has success property\", () => pm.expect(pm.response.json()).to.have.property('success'));",
              "pm.test(\"Response has data array\", () => pm.expect(pm.response.json()).to.have.property('data'));",
              "pm.test(\"Response has pagination\", () => {",
              "    const json = pm.response.json();",
              "    pm.expect(json).to.have.property('pagination');",
              "    pm.expect(json.pagination).to.have.property('currentPage');",
              "    pm.expect(json.pagination).to.have.property('totalPages');",
              "    pm.expect(json.pagination).to.have.property('totalProducts');",
              "});",
              "pm.test(\"Products have required fields\", () => {",
              "    const products = pm.response.json().data;",
              "    if (products.length > 0) {",
              "        pm.expect(products[0]).to.have.property('title');",
              "        pm.expect(products[0]).to.have.property('prix');",
              "        pm.expect(products[0]).to.have.property('stock');",
              "        pm.expect(products[0]).to.have.property('createdBy');",
              "    }",
              "});",
              "pm.test(\"Response time < 2s\", () => pm.expect(pm.response.responseTime).to.be.below(2000));"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{accessToken}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseURL}}/api/seller/products?page=1&limit=10",
          "host": ["{{baseURL}}"],
          "path": ["api", "seller", "products"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        },
        "description": "Retrieve all products created by the authenticated seller with pagination support."
      }
    },
    {
