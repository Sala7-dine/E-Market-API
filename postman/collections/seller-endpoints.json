          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{accessToken}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseURL}}/api/seller/stats",
          "host": ["{{baseURL}}"],
          "path": ["api", "seller", "stats"]
        },
        "description": "Get comprehensive statistics for the authenticated seller including products, orders, and revenue data."
      }
